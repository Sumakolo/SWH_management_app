@using WebApp.Models
@model User

<!DOCTYPE html>
<html>
<head>
    <title>Edit User</title>

    <link href="https://netdna.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/css/datepicker.min.css" rel="stylesheet">


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/js/bootstrap-datepicker.min.js"></script>
</head>
<body>

    <h1>Edit User</h1>


    <form action="/Home/EditUser" method="post">
        UserName
        <input type="text" name="Username" value="@Model.UserName" /> <br />
        Password
        <input type="password" name="Password" value="@Model.Password" /> <br />
        First Name
        <input type="text" name="FirstName" value="@Model.FirstName" /> <br />
        Last Name
        <input type="text" name="LastName" value="@Model.LastName" /> <br />
        Birth Year
        <input type="text" class="form-control" name="datepicker" id="datepicker" value="@Model.BirthYear.ToString()" /> <br />
        Birth Place
        <input type="text" name="BirthPlace" value="@Model.BirthPlace" /> <br />
        City
        <input type="text" name="City" value="@Model.City" /> <br />


        <input type="submit" value="Send" />
    </form>

    <script>
        $(document).ready(function () {
            $("#datepicker").datepicker({
                format: "yyyy",
                viewMode: "years",
                minViewMode: "years",
                autoclose: true
            });
        })
    </script>

</body>
</html>
